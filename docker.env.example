# DNS Server Configuration
DNS_LISTEN_ADDRESS=0.0.0.0
DNS_PORT=53
DNS_HOST_PORT=53
DNS_UPSTREAMS=8.8.8.8:53,1.1.1.1:53,208.67.222.222:53
DNS_LOG_FILE=/logs/dns-requests.log
DNS_LOG_LEVEL=info
DNS_CACHE_SIZE=10000
DNS_CACHE_TTL=5m
DNS_MAX_CONCURRENT=100
DNS_TIMEOUT=5s
DNS_RETRY_ATTEMPTS=3

# API Server Configuration
API_HOST_PORT=8080

# Frontend Configuration
FRONTEND_HOST_PORT=3000

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_INDEX=dns-logs
ELASTIC_CONTAINER_NAME=dns-go-elasticsearch
ELASTIC_HOST_PORT=9200

# Container Configuration
CONTAINER_NAME=dns-go-server
API_CONTAINER_NAME=dns-go-api
FRONTEND_CONTAINER_NAME=dns-go-frontend
LOGS_VOLUME_PATH=./logs

# Build Configuration (optional)
VERSION=dev
GIT_COMMIT=unknown
BUILD_DATE=unknown
